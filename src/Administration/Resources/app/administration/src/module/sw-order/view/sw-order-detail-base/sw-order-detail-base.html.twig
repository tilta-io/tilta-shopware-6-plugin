{% block sw_order_detail_base_custom_fields %}

    {% block tilta_payment_order_data %}
        <sw-card class="tilta-payment-order-data-card"
                 :title="$tc('tilta.orderData.cart.title')"
                 v-if="order.extensions.tiltaData"
                 :isLoading="isLoading">

            <sw-container columns="repeat(auto-fit, minmax(250px, 1fr))" gap="30px 30px">

                <sw-description-list columns="1fr" grid="1fr">
                    <dt>{{ $tc('tilta.orderData.fields.status.label') }}</dt>
                    <dd>
                        {{ order.extensions.tiltaData.status }}
                    </dd>
                </sw-description-list>

                <sw-description-list columns="1fr" grid="1fr">
                    <dt>{{ $tc('tilta.orderData.fields.orderExternalId.label') }}</dt>
                    <dd>
                        {{ order.extensions.tiltaData.orderExternalId }}
                    </dd>
                </sw-description-list>

                <sw-description-list columns="1fr" grid="1fr">
                    <dt>{{ $tc('tilta.orderData.fields.buyerExternalId.label') }}</dt>
                    <dd>
                        {{ order.extensions.tiltaData.buyerExternalId }}
                    </dd>
                </sw-description-list>

                <sw-description-list columns="1fr" grid="1fr">
                    <dt>{{ $tc('tilta.orderData.fields.invoiceNumber.label') }}</dt>
                    <dd>
                        <sw-order-inline-field v-model="order.extensions.tiltaData.invoiceNumber"
                                               :displayValue="order.extensions.tiltaData.invoiceNumber ? order.extensions.tiltaData.invoiceNumber : '-'"
                                               :value="order.extensions.tiltaData.invoiceNumber"
                                               :editable="isEditing"
                                               @input="saveAndReload"
                                               class="sw-order-inline-field__truncateable">
                        </sw-order-inline-field>
                    </dd>
                </sw-description-list>

                <sw-description-list columns="1fr" grid="1fr">
                    <dt>{{ $tc('tilta.orderData.fields.invoiceExternalId.label') }}</dt>
                    <dd>
                        <sw-order-inline-field v-model="order.extensions.tiltaData.invoiceExternalId"
                                               :displayValue="order.extensions.tiltaData.invoiceExternalId ? order.extensions.tiltaData.invoiceExternalId : '-'"
                                               :value="order.extensions.tiltaData.invoiceExternalId"
                                               :editable="isEditing"
                                               @input="saveAndReload"
                                               class="sw-order-inline-field__truncateable">
                        </sw-order-inline-field>
                    </dd>
                </sw-description-list>

            </sw-container>

        </sw-card>

    {% endblock %}

    {% parent %}
{% endblock %}
